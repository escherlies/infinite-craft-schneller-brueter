{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "lib": [
      "es2021"
    ],
  },
  "include": [
    "src/**/*",
    "lib/**/*",
    "test/**/*",
    "scripts/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}